{
  "conventionalCommits.scopes": [
    "config",
    "deps",
    "github",
    "utils"
  ],
  "css.customData": [
    ".vscode/unocss.json"
  ],
  "css.validate": false,
  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "editor.formatOnSave": false,
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // Enable the ESlint flat config support
  "eslint.useFlatConfig": true,
  // Enable eslint for all supported languages
  "eslint.validate": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml"
  ],
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".npmrc, package.json, package-lock.json, yarn.lock, pnpm-lock.yaml",
    "project.config.*": ".editorconfig, eslint.config.*, renovate.*, *.env, .env.*",
    "vite.config.*": "pages.config.*, manifest.config.*, uno.config.*, volar.config.*"
  },
  "files.exclude": {
    "src/assets/css/background.scss": true
  },
  "iconify.customCollectionJsonPaths": [
    "temp/icons/icons.json",
    "temp/icons/svg.json"
  ],
  "iconify.inplace": false,
  "iconify.position": "after",
  "image-manager.appearance.language": "zh-CN",
  "miniprogram.miniprogramPath": "dist/dev/mp-weixin",
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib"
}
