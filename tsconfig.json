{
  "allowSyntheticDefaultImports": true,
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@dcloudio/types",
      "vite-plugin-use-modules/client.d.ts"
    ],
    "allowJs": true,
    "ignoreDeprecations": "5.0",
    "sourceMap": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "temp/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "dist/**",
    "node_modules/**"
  ]
}
